<h1 id="principal_title">Articles</h1>
<div class="wrapper_general wrapper_padding">
<% @articles.each do |article| %>
  <div class="title">
  <%= link_to article.title, article_path(article)  %>
  </div>
  <div class="date">
    <%= article.created_at.strftime('%A %B %d') %>
  </div>
  <hr>
<% end %>
<% if user_signed_in? %>
<%= link_to 'New Article', new_article_path, id:"form_buttom"  %>
<% end %>
<%= will_paginate @articles %>
</div>

